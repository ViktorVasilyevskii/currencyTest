<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_sort_alphabet"/>
    <Button
        android:id="@+id/button_ascending_alphabet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_sort_ascending"/>
    <Button
        android:id="@+id/button_descending_alphabet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_sort_descending"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_sort_value"/>
    <Button
        android:id="@+id/button_ascending_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_sort_ascending"/>
    <Button
        android:id="@+id/button_descending_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_sort_descending"/>
</LinearLayout>
